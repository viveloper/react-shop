    },
    "requestBodies": {
      "JoinRequest": {
        "description": "회원가입요청",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "ObjectId"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "Product": {
        "description": "상품정보",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Product"
            }
          }
        },
        "required": true
      }
    },
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "name": "api_key",
        "in": "header"
      }
    }
  }
}
